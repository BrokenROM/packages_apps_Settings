<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_title" >

    <PreferenceCategory
            android:title="@string/statusbar_title">

         <PreferenceScreen
                 android:key="status_bar_battery_status_settings"
                 android:title="@string/status_bar_battery_status_settings_title"
                 android:summary="@string/status_bar_battery_status_settings_summary"
                 android:fragment="com.android.settings.broken.StatusBarBatteryStatusSettings" />

         <PreferenceScreen
                 android:key="battery_bar"
                 android:fragment="com.android.settings.broken.BatteryBar"
                 android:summary="@string/battery_bar_summary"
                 android:title="@string/battery_bar" />
                 
         <SwitchPreference
                 android:key="status_bar_brightness_control"
                 android:title="@string/status_bar_toggle_brightness"
                 android:summary="@string/status_bar_toggle_brightness_summary"
                 android:persistent="false"
                 android:defaultValue="false" />

         <com.android.settings.broken.SystemSettingSwitchPreference
                 android:key="status_bar_broken_logo"
                 android:title="@string/status_bar_broken_logo_title"
                 android:summary="@string/status_bar_broken_logo_summary" />

         <PreferenceScreen
                 android:key="carrier_options"
                 android:title="@string/carrier_options"
                 android:summary="@string/status_bar_carrier_summary"
                 android:fragment="com.android.settings.broken.CarrierLabel" />

         <PreferenceScreen
                 android:key="clock_style_pref"
                 android:title="@string/status_bar_clock"
                 android:summary="@string/status_bar_clock_summary"
                 android:fragment="com.android.settings.broken.StatusBarClockStyle" />

         <com.android.settings.broken.SystemSettingSwitchPreference
                 android:key="double_tap_sleep_gesture"
                 android:title="@string/double_tap_to_sleep_title"
                 android:summary="@string/double_tap_to_sleep_summary"
                 android:defaultValue="true" />

         <PreferenceScreen
                 android:key="expanded_desktop"
                 android:title="@string/power_menu_expanded_desktop"
                 android:summary="@string/expanded_title_summary"
                 android:fragment="com.android.settings.applications.ExpandedDesktopPreferenceFragment" />

         <SwitchPreference
                 android:key="status_bar_greeting"
                 android:title="@string/status_bar_greeting_title"
                 android:summary="@string/status_bar_greeting_summary"	
                 android:defaultValue="true" />
    
         <PreferenceScreen
                 android:key="status_bar_network_speed_settings"
                 android:title="@string/status_bar_network_speed_settings_title"
                 android:summary="@string/status_bar_network_speed_settings_summary"
                 android:fragment="com.android.settings.broken.StatusBarNetworkSpeedSettings" />

         <PreferenceScreen
                 android:key="status_bar_signal_wifi_settings"
                 android:title="@string/status_bar_signal_wifi_settings_title"
                 android:summary="@string/status_bar_signal_wifi_settings_summary"
                 android:fragment="com.android.settings.broken.StatusBarSignalWifiSettings" />

         <PreferenceScreen
                 android:key="status_bar_notif_system_icons_settings"
                 android:title="@string/status_bar_notif_system_icons_settings_title"
                 android:summary="@string/status_bar_notif_system_icons_settings_summary"
                 android:fragment="com.android.settings.broken.StatusBarNotifSystemIconsSettings" />

         <PreferenceScreen
                 android:key="quick_settings"
                 android:title="@string/title_quick_pulldown"
                 android:summary="@string/quick_pulldown_summary"
                 android:fragment="com.android.settings.broken.QsPulldown" />

         <PreferenceScreen
                 android:fragment="com.android.settings.broken.StatusBarWeather"
                 android:key="status_bar_weather"
                 android:title="@string/weather_clock_title" 
                 android:summary="@string/weather_clock_summary" />

         <com.android.settings.broken.SystemSettingSwitchPreference
                 android:key="enable_task_manager"
                 android:title="@string/enable_task_manager_title"
                 android:summary="@string/enable_task_manager_summary" />

    </PreferenceCategory>

    <PreferenceCategory
            android:title="@string/notifs_title">

         <PreferenceScreen
                 android:key="notification_drawer_settings"
                 android:title="@string/notification_drawer_title"
                 android:summary="@string/notifs_summary"
                 android:fragment="com.android.settings.broken.NotificationDrawerSettings" />

    </PreferenceCategory>

</PreferenceScreen>
