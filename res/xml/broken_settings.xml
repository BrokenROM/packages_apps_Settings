<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/broken_settings_title" >

        <!-- Animations -->
        <PreferenceScreen
                android:id="@+id/animation_settings"
                android:title="@string/animation_settings_title"
                android:summary="@string/animations_summary"
                android:fragment="com.android.settings.broken.AnimationSettings" />

        <!-- App Circle -->
        <PreferenceScreen
                android:id="@+id/app_circle_sidebar"
                android:title="@string/app_circle_bar_title"
                android:summary="@string/appcircle_summary"
                android:fragment="com.android.settings.broken.AppCircleSidebar" />

        <!-- AppOps -->
        <PreferenceScreen
                android:id="@+id/app_ops_settings"
                android:title="@string/app_ops_settings"
                android:summary="@string/appops_summary"
                android:fragment="com.android.settings.applications.AppOpsSummary" />

        <!-- Broken Walls -->
        <PreferenceScreen
                android:id="@+id/brokenwalls"
                android:title="@string/brokenwalls_title"
                android:summary="@string/brokenwalls_summary" >
                <intent
                    android:action="android.intent.action.SET_WALLPAPER"
                    android:targetPackage="com.broken.BrokenWalls"
                    android:targetClass="com.broken.BrokenWalls.brokenwalls" />
        </PreferenceScreen>

        <!-- Button Settings -->
        <PreferenceScreen
                android:id="@+id/button_settings"
                android:title="@string/button_pref_title"
                android:summary="@string/buttons_summary"
                android:fragment="com.android.settings.ButtonSettings" />

        <!-- Gesture anywhere -->
        <PreferenceScreen
                android:key="gesture_anywhere"
                android:fragment="com.android.settings.broken.gestureanywhere.GestureAnywhereSettings"
                android:title="@string/gesture_anywhere_title"
                android:summary="@string/ga_summary" />

        <!-- InitD -->
        <PreferenceScreen
                android:id="@+id/initD"
                android:title="@string/init_d_title"
                android:summary="@string/initd_summary"
                android:fragment="com.android.settings.broken.InitD" />

        <!-- Lock screen -->
        <PreferenceScreen
                android:id="@+id/lock_screen"
                android:title="@string/lock_screen_title"
                android:summary="@string/lock_screen_summary"
                android:fragment="com.android.settings.broken.LockScreen" />
        
        <!-- Nav bar -->
        <PreferenceScreen
                android:key="navigation_bar"
                android:title="@string/navigation_bar_title"
                android:summary="@string/navigation_summary"
                android:fragment="com.android.settings.broken.NavigationBarSettings" />

        <!-- Power Menu -->
        <PreferenceScreen
                android:key="button_power_menu_settings"
                android:title="@string/button_power_menu_settings_title"
                android:summary="@string/button_power_menu_settings_summary"
                android:fragment="com.android.settings.broken.PowerMenuSettings" />

        <!-- Screen Recorder -->
        <PreferenceScreen
                android:key="screen_recorder"
                android:title="@string/screen_recorder_title"
                android:summary="@string/recorder_summary"
                android:fragment="com.android.settings.broken.ScreenRecorderSettings" />

        <!-- Status Bar -->
        <PreferenceScreen
                android:key="status_bar"
                android:title="@string/status_bar_title"
                android:summary="@string/statusbar_summary"
                android:fragment="com.android.settings.broken.StatusBarSettings" />

        <!-- System App Remover -->
        <PreferenceScreen
                android:id="@+id/system_app_remover"
                android:title="@string/system_app_remover"
                android:summary="@string/systemappremover_summary"
                android:fragment="com.android.settings.broken.fragments.SystemappRemover" />

        <!-- Volume Keys -->
        <PreferenceScreen
                android:key="volume_keys_settings"
                android:title="@string/volume_keys_title"
                android:persistent="false"
                android:summary="@string/volume_summary"
                android:fragment="com.android.settings.broken.VolumeKeys" />

        <!-- Wakelock Blocker -->
        <PreferenceScreen
                android:key="wakelock_blocker"
                android:title="@string/wakelock_blocker_title"
                android:summary="@string/wakelock_summary"
                android:fragment="com.android.settings.broken.WakeLockBlocker" />

</PreferenceScreen>
